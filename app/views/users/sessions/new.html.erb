<div class="main">
  <h2 class="heading center">ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form__field center">
      <%= f.label "eメール", class:"form__field--title" %></br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="form__field center">
      <%= f.label "パスワード", class:"form__field--title" %></br>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  
    <%# if devise_mapping.rememberable? %>
      <!--<div class="field">-->
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
      <!--</div>-->
    <%# end %>
  
    <div class="center">
      <%= f.submit "ログイン", class:"btn__orange" %>
    </div>
  <% end %>
  
    <%#= render "users/shared/links", class:"btn" %>
</div>