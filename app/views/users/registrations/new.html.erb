<div class="main">
<h2 class="heading center">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="form__field center">
    <%= f.label "名前", class:"form__field--title" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="form__field center">
    <%= f.label "eメール", class:"form__field--title" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form__field center">
    <%= f.label "パスワード", class:"form__field--title" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form__field center">
    <%= f.label "パスワード確認", class:"form__field--title" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="center">
    <%= f.submit "新規登録", class:"btn__green" %>
  </div>
<% end %>
    <%#= render "users/shared/links", class:"btn" %>
</div>