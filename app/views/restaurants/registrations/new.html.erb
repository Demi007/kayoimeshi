<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "restaurants/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_field :introduction, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :announcement %><br />
    <%= f.text_field :announcement, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :price_range %><br />
    <%= f.text_field :price_range, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :open_morning %><br />
    <%= f.text_field :open_morning, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :open_noon %><br />
    <%= f.text_field :open_noon, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :open_night %><br />
    <%= f.text_field :open_night, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :regular_holiday %><br />
    <%= f.text_field :regular_holiday, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "restaurants/shared/links" %>
