<%= form_with model: @review, url: restaurant_review_path, local: true do |f| %>
　　<div class="center">
　　　<strong><%= f.label :"評価" %></strong>
　　　<div id="star"></div>
　　　<%= f.hidden_field :rate, id: :review_star %>
　　</div>
    
    <div class="center">
    　<strong><%= f.label :"口コミ内容" %></strong>
    </div>
    <div class="center">
      <%= f.text_area :comment, size: "50x10", class:"border shadow" %>
    </div>
    <div class="center">
　    <%= link_to "削除", restaurant_review_path, method: :delete %>
    </div>
    <div class="center">
　    <%= f.submit '更新', class:"btn__green"%>
    </div>
<% end %>


<script>
  $('#star').raty({
    size     : 38,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'review[rate]',
    half: true,
  });
</script>  