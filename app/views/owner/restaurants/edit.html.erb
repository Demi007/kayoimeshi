  </div>
  
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_field :introduction, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :announcement %><br />
    <%= f.text_field :announcement, autofocus: true %>
  </div>
  
