    <%= f.label :regular_holiday %><br />
    <%= f.text_field :regular_holiday, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="field">
