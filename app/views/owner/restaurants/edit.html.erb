<%= form_with model: [:owner,@restaurant] , local: true do |f| %>
 <div class="form__field center">
    <%= f.label "名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "紹介文" %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "お店からのお知らせ" %><br />
    <%= f.text_area :announcement, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "価格帯" %><br />
    <%= f.text_field :price_range, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "営業時間　朝" %><br />
    <%= f.text_field :open_morning, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "営業時間　昼" %><br />
    <%= f.text_field :open_noon, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "営業時間　夜" %><br />
    <%= f.text_field :open_night, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "定休日" %><br />
    <%= f.text_field :regular_holiday, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "郵便番号" %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="form__field center">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="center">
    <%= f.submit "更新", class:"btn__green" %>
  </div>
<% end %>